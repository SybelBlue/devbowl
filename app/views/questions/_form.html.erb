    margin: 0 0 25px 0;
    color: #495057;
  }

  .prompt-group {
    margin-bottom: 40px;
    padding: 25px;
    background: #f8f9fa;
    border-radius: 12px;
    border: 1px solid #dee2e6;
  }

  .prompt-group[data-prompt-type="TossUp"] {
    border-left: 4px solid #28a745;
  }

  .prompt-group[data-prompt-type="Bonus"] {
    border-left: 4px solid #007bff;
  }

  .prompt-header {
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #dee2e6;
  }

  .prompt-header h5 {
    margin: 0;
    color: #495057;
    font-size: 1.2em;
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
  }

  .col-md-4, .col-md-6, .col-md-8 {
    padding: 0 15px;
