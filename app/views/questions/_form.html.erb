    max-width: 66.667%;
  }

  .answer-choices-section {
    margin: 20px 0;
    padding: 20px;
    background: white;
    border-radius: 8px;
    border: 1px solid #e1e5e9;
  }

  .answer-choices-list {
    margin-top: 15px;
  }

  .answer-choice-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 15px;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 6px;
    border: 1px solid #e9ecef;
    transition: background-color 0.2s;
  }

  .answer-choice-row:hover {
    background: #e9ecef;
  }

  .choice-radio {
    flex-shrink: 0;
  }

  .answer-radio {
    width: 18px;
