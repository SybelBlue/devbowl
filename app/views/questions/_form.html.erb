    gap: 12px;
    padding: 25px 0;
    border-top: 1px solid #e1e5e9;
    margin-top: 30px;
  }

  .btn {
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border: 2px solid;
    cursor: pointer;
    transition: all 0.2s;
