<% content_for :title, "Edit Question" %>

<div class="page-header">
  <h1>Edit Question</h1>
  <div class="header-actions">
    <%= link_to 'Show', @question, class: "btn btn-outline-info" %>
    <%= link_to 'Back to Questions', questions_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<%= render 'form', question: @question %>

<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e1e5e9;
  }

  .page-header h1 {
    margin: 0;
    color: #2c3e50;
  }

  .header-actions {
    display: flex;
    gap: 10px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
    display: inline-block;
    border: 2px solid;
  }

  .btn-outline-info {
    background-color: transparent;
    border-color: #17a2b8;
    color: #17a2b8;
  }

  .btn-outline-info:hover {
    background-color: #17a2b8;
    color: white;
  }

  .btn-outline-secondary {
    background-color: transparent;
    border-color: #6c757d;
    color: #6c757d;
  }

  .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: white;
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .header-actions {
      width: 100%;
    }

    .btn {
      flex: 1;
      text-align: center;
    }
  }
</style>