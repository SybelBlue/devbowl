<div class="prompt-display <%= prompt.type&.downcase %>">
  <div class="prompt-header">
    <h4 class="prompt-title"><%= prompt.type || 'Prompt' %></h4>
    <span class="prompt-badge <%= prompt.type&.downcase %>-badge">
      <%= prompt.type || 'Prompt' %>
    </span>
  </div>
  <div class="prompt-body">
    <% if prompt.content.present? %>
      <%= simple_format(prompt.content) %>
    <% else %>
      <em class="text-muted">No content provided</em>
    <% end %>
  </div>
</div>

<style>
  .prompt-display {
    background: white;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 15px;
  }

  .prompt-display.tossup {
    border-left: 4px solid #28a745;
  }

  .prompt-display.bonus {
    border-left: 4px solid #007bff;
  }

  .prompt-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #f1f3f4;
  }

  .prompt-title {
    margin: 0;
    color: #495057;
    font-size: 1.1em;
    font-weight: 600;
  }

  .prompt-badge {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tossup-badge {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .bonus-badge {
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #b6dfea;
  }

  .prompt-body {
    font-size: 15px;
    line-height: 1.5;
    color: #333;
  }

  .prompt-body p {
    margin: 0 0 12px 0;
  }

  .prompt-body p:last-child {
    margin-bottom: 0;
  }

  .text-muted {
    color: #6c757d !important;
    font-style: italic;
  }
</style>